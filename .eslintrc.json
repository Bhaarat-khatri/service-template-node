{
  "extends": [
    "wikimedia/server"
  ],
  "plugins": ["json", "jsdoc"],
  "rules": {
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "indent": ["off", 4],
    "jsdoc/no-undefined-types": "off",
    "no-shadow": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "space-in-parens": ["error", "never"],
    "computed-property-spacing": "off",
    "no-multi-spaces": "off",
    "no-underscore-dangle": "off",
    "array-bracket-spacing": "off"
  }
}
